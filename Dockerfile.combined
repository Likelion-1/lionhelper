FROM python:3.11-slim

# 시스템 패키지 설치
RUN apt-get update && apt-get install -y \
    curl \
    wget \
    && rm -rf /var/lib/apt/lists/*

# Ollama 설치
RUN curl -fsSL https://ollama.ai/install.sh | sh

# 작업 디렉토리 설정
WORKDIR /app

# Python 의존성 설치
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# 애플리케이션 코드 복사
COPY . .

# 포트 노출
EXPOSE 8000 11434

# 시작 스크립트 생성
RUN echo '#!/bin/bash\n\
echo "Ollama 서버 시작 중..."\n\
ollama serve &\n\
sleep 15\n\
echo "모델 다운로드 중..."\n\
ollama pull llama2:7b &\n\
echo "FastAPI 서버 시작 중..."\n\
python main.py' > /start.sh && chmod +x /start.sh

# 시작 스크립트 실행
CMD ["/start.sh"]
